n","      evaluations.append(math.inf)\n","evaluations = evaluations + leaf_nodes\n","\n","alpha, beta = -math.inf, math.inf\n","Alpha_Beta_Pruning(0, bullet, depth, alpha, beta, True)\n","\n","\n","print(\"Depth and Branches ratio is %d:%d\" % (depth, bullet))\n","print(\"Terminal States (leaf node values) are\", *leaf_nodes, sep = \", \")\n","print(\"Left life(HP) of the defender after maximum damage caused by the attacker is\", initial_hp - evaluations[0])\n","print(\"After Alpha-Beta Pruning Leaf Node Comparisons\", comp_value)"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"l2maaGqYEyUF","executionInfo":{"status":"ok","timestamp":1690702713185,"user_tz":-360,"elapsed":14661,"user":{"displayName":"Abeda Zahid Chandrica","userId":"08111882696983234900"}},"outputId":"d1d964b5-3771-4f2e-d072-deb5e9c3dd4d"},"execution_count":null,"outputs":[{"output_type":"stream","name":"stdout","text":["Enter your student ID: 17101502\n","Enter the minimum and maximum value for the range of negative HP: 1 50\n","Depth and Branches ratio is 2:1\n","Terminal States (leaf node values) are, 37\n","Left life(HP) of the defender after maximum damage caused by the attacker is -17\n","After Alpha-Beta Pruning Leaf Node Comparisons 1\n"]}]}]}